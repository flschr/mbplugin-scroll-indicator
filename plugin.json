{
  "name": "mbplugin-scroll-indicator",
  "title": "Scroll Progress Bar for Micro.blog",
  "version": "0.0.1",
  "author": "Ren√© Fischer",
  "description": "Displays a customizable progress bar at the top of the page based on scroll position.",
  "fields": [
    {
      "field": "params.scrollprogressbar.enabled",
      "type": "boolean",
      "label": "Enable progress bar",
      "default": true
    },
    {
      "field": "params.scrollprogressbar.color",
      "type": "color",
      "label": "Bar color",
      "default": "#007aff"
    },
    {
      "field": "params.scrollprogressbar.height",
      "type": "string",
      "label": "Bar height (e.g. 4px)",
      "default": "4px"
    }
  ]
}